<div class="data-filler">
    <h1>Data from DB</h1>

    {{#if courses.length}}
        {{#each courses}}
        <div class="row">
            <div class="col s6 offset-3">
                <div class="card">
                    <div class="card-image">
                        <img src="{{img}}" alt="{{title}}">
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{title}}</span>
                        <p class="price">{{price}}</p>
                    </div>
                    <div class="card-action">
                        <a href="/courses/{{_id}}">Open course</a>
                        <a href="/courses/{{_id}}/edit?allow=true">Edit</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    {{else}}
        <p>Empty Database</p>
    {{/if}}
</div>
